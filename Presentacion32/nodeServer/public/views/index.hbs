{{> headers title="Inicio" }}

{{#if session.nombre}} 
<div class="container mt-3">
    <h2 class="alert alert-info">
        Te damos la bienvenida <b>{{session.nombre}}</b>
        <img src="{{session.foto}}" style="max-width:50px" alt="">
        <a class="btn btn-danger float-right" href="/logout">Cerrar sesi√≥n</a>
    </h2>
</div>

<div class="container">
  <div id="contenedor" class="jumbotron text-center border border-secondary">
    <h2 style="color: black" class="">Lista de Productos</h2>

    {{#if productos.length}}
      <div class="table-responsive">
        <table class="table table-striped table-dark">
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto URL</th>
          </tr>
          {{#each productos}}
          <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>
              <img style="display: inline-flex; width: 50px; height: 50px" src="{{foto}}"/>
            </td>
          </tr>
          {{/each}}
        </table>
      </div>
    {{else}}
      <h3 style="color:red;" class="mb-5">No se agrego ningun producto</h3>
    {{/if}}
  </div>
</div>
 
{{else}}
<div class="container mt-3">
  <h1 class="alert alert-info">
    Para ver el contenido 
    <button class="btn btn-success float-right" onclick="location.href='/login'">
        Iniciar Sesion
    </button>
  </h1>
</div>

 {{/if}} 
   
               
{{> footer }}