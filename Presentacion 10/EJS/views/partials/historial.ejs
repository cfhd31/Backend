
<h2 style="color: rgb(0, 0, 0)">Lista de Productos</h2>

<% if(productos.length > 0){ %>        <!-- pregunto si hay productos -->
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto URL</th>
            </tr>

            <% for (const producto of productos) {%>   <!-- filas de productos -->
                <tr>
                    <td><%=producto.nombre %></td>
                    <td><%=producto.precio %></td>
                    <td>
                        <img style="display: inline-flex; width: 40px; height: 40px" src="<%=producto.foto%>"/>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>
<% } else { %>
    <h3 style="color: rgb(255, 0, 0)">No se agrego ningun producto </h3>
<% } %>