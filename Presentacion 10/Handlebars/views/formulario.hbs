<div class="col-3 mt-5 mx-auto">
    <div class="badge alert-secondary mt-5 p-2 text-dark bg-opacity-10 border border-secondary">

        <h1 style="color:black;" class="mb-3">Agregar Productos</h1>
        <br>
        <form action="/productos" method="post">
            <div class="form-group">
                <input id="nombre" placeholder="Nombre del producto" for="nombre" class="form-control" type="text" name="nombre" tabIndex="1" required autoFocus>
            </div>
            <div class="form-group">
                <input id="precio" placeholder="Precio" for="Precio" class="form-control" type="text" name="precio" tabIndex="2" required>
            </div>
            <div class="form-group">
                <input id="foto" placeholder="URL de la foto" for="foto" class="form-control" type="text" name="foto" tabIndex="3" required>
            </div>
            <div class="d-grid mx-auto">
                <button class="btn btn-success mt-2 mb-3">Agregar Producto</button>
            </div>
        </form>
        <div class="d-grid mx-auto mb-3">
            <button  class="btn btn-success" type="button"><a href="/lista" style="color: black;">Ver Productos</a></button>
        </div>
    </div>
</div>