
<div class="container mt-5">
    <div class="jumbotron text-center border border-secondary">
        <h2 style="color: black">Vista de Productos</h2>

        {{#if productos.length}}

            <div class="table-responsive">
                <table class="table table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto URL</th>
                        <th></th>
                    </tr>

                    {{#each productos}}
                        <tr>
                            <td>{{nombre}}</td>
                            <td>{{precio}}</td>
                            <td>
                                <img style="display: inline-flex; width: 40px; height: 40px" src="{{foto}}"/>
                            </td>
                            <td>Boton borrar</td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        {{else}}
            <h3 style="color:red;">No se agrego ningun producto</h3>
        {{/if}}
        <div class="d-grid mx-auto">
            <button  class="btn btn-success" type="button"><a href="/" style="color: black;">Agregar mas producto</a></button>
        </div>
    </div>
</div>