{{> headers title="Home" }}

{{#if session.nombre}} 
<div>
<div class="container" style="display:flex">
 
      <h3>Hola {{session.nombre}}</h3>
        <img src="{{session.foto}}" style="max-width:50px; margin:10px" alt="">
    
        <a class="btn btn-warning float-right" href="/logout">Logout</a>
    </div>
</div>

  
 <h2 style="color: blue">Vista de Productos</h2>

  <div class="table-responsive">
    <table class="table table-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto URL</th>
      </tr>
      <!-- filas -->
      {{#each productos}}
      <tr>
        <td>{{nombre}}</td>
        <td>{{precio}}</td>
        <td>
          <img
            style="display: inline-flex; width: 60px; height: 60px"
            src="{{foto}}"
          />
        </td>
      </tr>
    {{/each}}
    </table>
  </div>
 
  {{else}}
<div class="container mt-3">
        <h1 class="alert alert-success">
        
           Para ver el contenido 
                <button class="btn btn-warning float-right" onclick="location.href='/login'">
                    Iniciar Sesion
                </button>
        </h1>
    </div>

 {{/if}} 
   
               
{{> }}